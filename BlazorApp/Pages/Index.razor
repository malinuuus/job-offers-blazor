@page "/"

<PageTitle>Strona główna</PageTitle>

<AuthorizeView>
	<Authorized>
		<h1>Witaj, @context.User.Identity?.Name!</h1>
	</Authorized>
	<NotAuthorized>
		<div class="start-options">
			<h1>System ofert pracy</h1>
			<a class="form-btn" href="login">Zaloguj się</a>
			<a class="form-btn" href="register">Zarejestruj się</a>
		</div>
	</NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="Recruiter">
	<p>Firma: @context.User.FindFirst("CompanyName")?.Value</p>
</AuthorizeView>